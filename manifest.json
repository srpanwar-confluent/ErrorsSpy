{
  "name": "Confluent ErrorSpy",
  "description": "Captures and downloads console logs, network trace and tab recording.",
  "version": "0.1",
  "permissions": [
    "debugger",
    "tabs",
    "tabCapture"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icon.green.png",
    "default_title": "Confluent ErrorSpy"
  },
  "manifest_version": 2
}
